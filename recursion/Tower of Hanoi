#include <stdio.h>

// Recursive function to solve Tower of Hanoi
void towerOfHanoi(int n, char source, char dest, char aux) {
    if (n == 1) {  // base case: only 1 disk
        printf("Move disk 1 from %c to %c\n", source, dest);
        return;
    }
    // Move n-1 disks from source → auxiliary
    towerOfHanoi(n - 1, source, aux, dest);

    // Move largest disk to destination
    printf("Move disk %d from %c to %c\n", n, source, dest);//i have revued your code its nice 

    // Move n-1 disks from auxiliary → destination
    towerOfHanoi(n - 1, aux, dest, source);
}

int main() {
    int n;
    printf("Enter number of disks: ");
    scanf("%d", &n);

    printf("The sequence of moves:\n");
    towerOfHanoi(n, 'A', 'C', 'B');  // A = source, C = destination, B = auxiliary

    return 0;
}
